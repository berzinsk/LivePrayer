<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="us.liveprayer.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="us.liveprayer.mobile.LivePrayer" >
        <activity
            android:name="us.liveprayer.mobile.Authorization"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="us.liveprayer.mobile.PrayerList"
            android:label="@string/title_activity_prayer_list" >
        </activity>
        <activity
            android:name="us.liveprayer.mobile.PrayerView"
            android:label="@string/title_activity_prayer_view" >
        </activity>
    </application>

</manifest>
